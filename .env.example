# Database Configuration - NEVER commit real credentials!
# Set this in Heroku config vars or other secure environment
DATABASE_URL=postgresql://username:password@hostname:port/database?sslmode=require

# JWT Configuration
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your_secret_key_here

# Flask Environment
FLASK_ENV=development  # Set to 'production' in production
FLASK_DEBUG=False      # Set to 'True' for development

# Email Configuration - NEVER commit real passwords!
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=example@gmail.com
SMTP_PASSWORD=your_app_password_here
FROM_EMAIL=noreply@example.com
ADMIN_EMAIL=admin@example.com

# React App Configuration
REACT_APP_API_URL=http://localhost:5000/api