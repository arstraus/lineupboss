{
  "name": "LineupBoss",
  "description": "Baseball Lineup Manager",
  "repository": "https://github.com/yourusername/lineupboss",
  "logo": "https://github.com/yourusername/lineupboss/raw/main/frontend/public/logo192.png",
  "keywords": ["baseball", "lineup", "management", "react", "flask"],
  "buildpacks": [
    { "url": "heroku/nodejs" },
    { "url": "heroku/python" }
  ],
  "env": {
    "NPM_CONFIG_LEGACY_PEER_DEPS": {
      "value": "true"
    },
    "NPM_CONFIG_PRODUCTION": {
      "value": "true"
    },
    "NODE_ENV": {
      "value": "production"
    },
    "DATABASE_URL": {
      "description": "PostgreSQL database URL",
      "required": true
    },
    "JWT_SECRET_KEY": {
      "description": "Secret key for JWT authentication",
      "generator": "secret"
    },
    "FLASK_ENV": {
      "description": "Environment (development or production)",
      "value": "production"
    }
  },
  "stack": "heroku-22",
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  }
}